{
  "name": "mcp-swimlanes",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "MCP server for generating Swimlanes.io diagrams and images",
  "main": "dist/index.js",
  "bin": {
    "mcp-swimlanes": "dist/index.js"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json && node scripts/add-shebang.mjs",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "check": "tsc --noEmit -p tsconfig.json"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "undici": "^6.19.8"
  },
  "devDependencies": {
    "tsx": "^4.7.0",
    "typescript": "^5.4.5",
    "@types/node": "^20.14.10"
  },
  "engines": {
    "node": ">=18.18"
  }
}
